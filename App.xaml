<Application x:Class="DMAssistant.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DMAssistant"
             xmlns:vm="clr-namespace:DMAssistant.ViewModel"
             xmlns:rc="clr-namespace:DMAssistant.Helpers"
             xmlns:v="clr-namespace:DMAssistant.View"
             StartupUri="View/MainWindow.xaml">

    <Application.Resources>

        <!-- NPC DataTemplate -->
        <DataTemplate DataType="{x:Type vm:NPCViewModel}">
            <v:NPCView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:NPCPanelViewModel}">
            <v:NPCPanelView />
        </DataTemplate>
        <!-- Items -->
        <DataTemplate DataType="{x:Type vm:ItemViewModel}">
            <v:ItemView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ItemPanelViewModel}">
            <v:ItemPanelView />
        </DataTemplate>
        <!-- Monsters -->
        <DataTemplate DataType="{x:Type vm:MonsterPanelViewModel}">
            <v:MonsterPanelView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MonsterViewModel}">
            <v:MonsterView />
        </DataTemplate>
        <!-- Locations -->
        <DataTemplate DataType="{x:Type vm:LocationPanelViewModel}">
            <v:LocationPanelView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LocationViewModel}">
            <v:LocationView />
        </DataTemplate>
        <!-- Campaign Notes Panel -->
        <DataTemplate DataType="{x:Type vm:CampaignNotesViewModel}">
            <v:CampaignNotesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:WorldMapViewModel}">
            <v:WorldMapView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SoundPanelViewModel}">
            <v:SoundPanelView/>
        </DataTemplate>        
        <!-- Lore Panel -->
        <DataTemplate DataType="{x:Type vm:CampaignLoreViewModel}">
            <v:CampaignLoreView/>
        </DataTemplate>
        <!-- PCs Panel -->
        <DataTemplate DataType="{x:Type vm:CampaignPCViewModel}">
            <v:CampaignPCView />
        </DataTemplate>
        <!-- Fronts Panel -->
        <DataTemplate DataType="{x:Type vm:CampaignFrontsViewModel}">
            <v:CampaignFrontsView />
        </DataTemplate>
        <!-- Campaign Panel -->
        <DataTemplate DataType="{x:Type vm:CampaignViewModel}">
            <v:CampaignView />
        </DataTemplate>
        <!-- Sessions Panel -->
        <DataTemplate DataType="{x:Type vm:SessionViewModel}">
            <v:SessionView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EncountersPanelViewModel}">
            <v:EncountersPanelView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EncounterViewModel}">
            <v:EncounterView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EncounterItemViewModel}">
            <v:EncounterItemView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CombatTrackerViewModel}">
            <v:CombatTrackerView />
        </DataTemplate>

        <rc:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <rc:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter" />

    </Application.Resources>
</Application>
