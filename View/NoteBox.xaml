<UserControl x:Class="DMAssistant.View.NoteBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border BorderBrush="Black" BorderThickness="1" Background="LightYellow">
        <Grid Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="Auto"/>
                <!-- Collapse Button -->
                <RowDefinition Height="*"/>
                <!-- Body -->
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>

            <!-- TITLE (double-click to edit) -->
            <TextBox x:Name="TitleBox"
                     Text="New Note"
                     BorderThickness="0"
                     Background="Transparent"
                     FontWeight="Bold"
                     IsReadOnly="True"
                     Focusable="False"
                     MouseDoubleClick="TitleBox_MouseDoubleClick"
                     />

            <!-- COLLAPSE/EXPAND BUTTON -->
            <Button x:Name="ToggleCollapseButton"
                    Grid.Row="1"
                    Content="▼"
                    Width="22"
                    Height="18"
                    HorizontalAlignment="Left"
                    Click="ToggleCollapse_Click"
                    />

            <!-- MAIN TEXT -->
            <TextBox x:Name="NoteTextBox"
                     Grid.Row="2"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Visibility="Collapsed"
                     />

            <!-- REMOVE BUTTON -->
            <Button Width="18" Height="18"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,0,2,0"
                    Background="Red"
                    Foreground="White"
                    Click="DeleteButton_Click">
                <Image Source="/Resources/icon-close.png"/>
            </Button>

            <!-- RESIZE HANDLE -->
            <Rectangle Grid.Row="3" Margin="0,0,-2,-2" x:Name="BottomRightHandle" Width="10" Height="10" Fill="Transparent" Stroke="Gray" HorizontalAlignment="Right" VerticalAlignment="Bottom" Cursor="SizeNWSE"/>
            <Rectangle Grid.Row="3" Margin="0,0,-2,-2" x:Name="BottomLeftHandle" Width="10" Height="10" Fill="Transparent" Stroke="Gray" HorizontalAlignment="Left" VerticalAlignment="Bottom" Cursor="SizeNESW" Visibility="Collapsed"/>
            <Rectangle Grid.Row="3" Margin="0,0,-2,-2" x:Name="TopLeftHandle" Width="10" Height="10" Fill="Transparent" Stroke="Gray" HorizontalAlignment="Left" VerticalAlignment="Top" Cursor="SizeNWSE" Visibility="Collapsed"/>
        </Grid>
    </Border>
</UserControl>
