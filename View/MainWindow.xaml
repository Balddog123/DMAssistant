<Window x:Class="DMAssistant.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMAssistant"
        xmlns:vm="clr-namespace:DMAssistant.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow">
    
    <Grid>

        <!-- ######## TOP BAR WITH CIRCLE BUTTONS ######## -->
        <StackPanel Orientation="Horizontal"
                    Margin="10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Panel.ZIndex="10">
            <!-- Campaign Button -->
            <Button Content="Campaign"
                    Command="{Binding ShowCampaignCommand}"
                    Width="70" Height="70"/>

            <!-- Sessions Button -->
            <Button Content="Sessions"
                    Command="{Binding ShowSessionsCommand}"
                    Width="70" Height="70"
                    Margin="10 0 0 0"/>

            <!-- SoundPanel Button -->
            <Button Content="Sounds"
                    Command="{Binding ShowSoundPanelCommand}"
                    Width="70" Height="70"
                    Margin="10 0 0 0"/>
        </StackPanel>

        <!-- ######## MAIN CONTENT AREA ######## -->
        <Grid Margin="0 100 0 0">
    
            <!-- CampaignView user control goes here!-->
            <ContentControl x:Name="MainContent"
                            Content="{Binding CurrentView}"/>

        </Grid>

    </Grid>

</Window>


