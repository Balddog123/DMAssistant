<UserControl x:Class="DMAssistant.View.EncountersPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DMAssistant.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Left side: encounter list -->
            <ColumnDefinition Width="150" />
            <!-- Right side: encounter details -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left panel -->
        <DockPanel Grid.Column="0" Background="#EEE">
            <!-- Header -->
            <TextBlock Text="Encounters"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="10"
                       DockPanel.Dock="Top" />
            <!-- Add encounter button -->
            <Button Content="Add Encounter"
                    Command="{Binding AddEncounterCommand}"
                    Margin="10"
                    Height="20"
                    DockPanel.Dock="Top" />

            <!-- List of encounters -->
            <ListBox ItemsSource="{Binding Encounters}"
                     SelectedItem="{Binding SelectedEncounter}"
                     Margin="10"
                     DockPanel.Dock="Top">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <!-- Remove button -->
                            <Button Command="{Binding DataContext.RemoveEncounterCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,0,0"
                                    DockPanel.Dock="Right">
                                <Image Source="pack://application:,,,/Resources/icon-delete.png"/>
                            </Button>

                            <!-- Encounter name -->
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>

        <!-- Right panel: Encounter view gets injected here -->
        <Border Grid.Column="1" 
                Background="White" 
                BorderBrush="#CCC" 
                BorderThickness="1"
                Padding="10">

            <!-- Whatever ViewModel's SelectedEncounter produces goes here -->
            <ContentControl Content="{Binding SelectedEncounterViewModel}" />
        </Border>

    </Grid>
</UserControl>
