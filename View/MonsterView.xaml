<UserControl x:Class="DMAssistant.View.MonsterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DMAssistant.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Margin="10">
        <Grid DockPanel.Dock="Top" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Delete Button -->
            <Button Grid.Column="1"
            Content="Delete"
            Background="Red"
            Foreground="White"
            FontWeight="Bold"
            Padding="5,2"
            Margin="10,0,0,0"
            VerticalAlignment="Center"
            Command="{Binding DeleteCommand}"/>
        </Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">

            <StackPanel Margin="10">

                <TextBox Text="{Binding Name, Mode=TwoWay}" FontSize="26" FontWeight="Bold"/>

                <TextBox Text="{Binding Meta, Mode=TwoWay}" FontStyle="Italic" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <TextBlock Text="Armor Class:" FontWeight="Bold"/>
                        <TextBox Text="{Binding ArmorClass, Mode=TwoWay}" Margin="0,0,0,10"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Hit Points:" FontWeight="Bold"/>
                        <TextBox Text="{Binding HitPoints, Mode=TwoWay}" Margin="0,0,0,10"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Speed:" FontWeight="Bold"/>
                        <TextBox Text="{Binding Speed, Mode=TwoWay}" Margin="0,0,0,10"/>
                    </StackPanel>
                </StackPanel>
                
                <TextBlock Text="Traits:" FontWeight="Bold"/>
                <TextBox Text="{Binding TraitsText, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                <TextBlock Text="Actions:" FontWeight="Bold"/>
                <TextBox Text="{Binding ActionsText, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                <TextBlock Text="Legendary Actions:" FontWeight="Bold"/>
                <TextBox Text="{Binding LegendaryText, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            </StackPanel>

        </ScrollViewer>
    </DockPanel>
</UserControl>
