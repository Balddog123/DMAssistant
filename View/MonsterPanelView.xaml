<UserControl x:Class="DMAssistant.View.MonsterPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DMAssistant.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDE -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">

            <TextBox Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10"/>
            <Button Content="Add New Monster"
                    Command="{Binding AddNewMonsterCommand}"
                    Margin="0,0,0,10"/>
            <Button Content="Add Existing Monster"
                    Command="{Binding AddExistingMonsterCommand}"
                    Margin="0,0,0,10"/>

            <ComboBox ItemsSource="{Binding AllCreatureTypes}"
                      SelectedItem="{Binding TypeFilter}"
                      Margin="0,0,0,10"/>

            <ComboBox ItemsSource="{Binding AllCRs}"
                      SelectedItem="{Binding CRFilter}"
                      Margin="0,0,0,10"/>

            <ListBox ItemsSource="{Binding MonsterView}"
                     SelectedItem="{Binding SelectedMonster}"
                     DisplayMemberPath="Name"
                     Height="600"/>
        </StackPanel>

        <!-- RIGHT SIDE -->
        <ContentControl Grid.Column="1" Content="{Binding SelectedMonsterViewModel}"/>
    </Grid>
</UserControl>
